<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.chinastores"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/store"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" android:required="true"/>
        <activity
            android:name="com.app.chinastores.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.app.chinastores.StoreEdit"></activity>
        <activity android:name="InfoActivity"></activity>
        <activity android:name="MyMapActivity"></activity>
        <activity android:name="StoreView"></activity>
        <uses-library android:name="com.google.android.maps.MapView.class" android:required="true"/>
        <meta-data android:name="com.google.android.maps.v2.API_KEY"
		android:value="AAIzaSyCNfN_tlCag2c5JEOzvhgwmddlmRCI0mQk"/>
    </application>

</manifest>